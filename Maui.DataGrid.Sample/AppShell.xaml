<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.DataGrid.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.DataGrid.Sample"
    Shell.FlyoutBehavior="Flyout" x:ClassModifier="internal">

    <ShellContent
        Title="Maui DataGrid - multi selection Sample"
        ContentTemplate="{DataTemplate local:MultipleSelectionPage}"
        Route="MultipleSelectionPage" />

    <ShellContent
        Title="Maui DataGrid Sample"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
