<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.DataGrid.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.DataGrid.Sample"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Maui DataGrid Sample"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Maui DataGrid Sample DataTable"
        ContentTemplate="{DataTemplate local:DataTablePage}"
        Route="DataTablePage" />
</Shell>
